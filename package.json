{
  "name": "@dylanburkey/astro-blog-cms",
  "version": "0.1.0",
  "description": "A complete blog CMS with WYSIWYG editor for Astro + Cloudflare (D1/R2/Workers)",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components/editor/*": "./src/components/editor/*",
    "./components/blog/*": "./src/components/blog/*",
    "./layouts/*": "./src/layouts/*",
    "./pages/*": "./src/pages/*",
    "./lib/*": "./src/lib/*",
    "./styles/*": "./src/styles/*",
    "./config": {
      "types": "./dist/types/config.d.ts",
      "import": "./dist/config.js"
    }
  },
  "files": [
    "dist",
    "src",
    "migrations"
  ],
  "scripts": {
    "dev": "pnpm --filter example dev",
    "build": "tsup",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "eslint src --ext .ts,.astro",
    "lint:fix": "eslint src --ext .ts,.astro --fix",
    "format": "prettier --write \"src/**/*.{ts,astro,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,astro,css}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "keywords": [
    "astro",
    "blog",
    "cms",
    "cloudflare",
    "d1",
    "r2",
    "wysiwyg",
    "editor",
    "admin",
    "content-management",
    "astro-component"
  ],
  "author": {
    "name": "Dylan Burkey",
    "url": "https://github.com/dylanburkey"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dylanburkey/astro-blog-cms.git"
  },
  "bugs": {
    "url": "https://github.com/dylanburkey/astro-blog-cms/issues"
  },
  "homepage": "https://github.com/dylanburkey/astro-blog-cms#readme",
  "peerDependencies": {
    "astro": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "astro": "^5.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-astro": "^0.31.0",
    "prettier": "^3.2.4",
    "prettier-plugin-astro": "^0.13.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
