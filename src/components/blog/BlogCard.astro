---
export interface Props {
  title: string;
  excerpt: string;
  author: string;
  authorAvatar?: string;
  date: string;
  readTime?: string;
  image?: string;
  category?: string;
  tags?: string[];
  href: string;
  featured?: boolean;
  layout?: 'vertical' | 'horizontal' | 'compact';
  class?: string;
}

const {
  title,
  excerpt,
  author,
  authorAvatar,
  date,
  readTime,
  image,
  category,
  tags = [],
  href,
  featured = false,
  layout = 'vertical',
  class: className = ''
} = Astro.props;
---

<article class={`blog-card blog-card-${layout} ${featured ? 'featured' : ''} ${className}`}>
  <a href={href} class="blog-card-link">
    {image && (
      <div class="blog-card-image">
        <img src={image} alt={title} loading="lazy" />
        {category && (
          <span class="blog-card-category">{category}</span>
        )}
        {featured && (
          <span class="blog-card-featured">Featured</span>
        )}
      </div>
    )}
    
    <div class="blog-card-content">
      <header class="blog-card-header">
        <h3 class="blog-card-title">{title}</h3>
        <div class="blog-card-meta">
          {authorAvatar && (
            <img src={authorAvatar} alt={author} class="blog-card-avatar" />
          )}
          <span class="blog-card-author">{author}</span>
          <span class="blog-card-separator">•</span>
          <time class="blog-card-date">{date}</time>
          {readTime && (
            <>
              <span class="blog-card-separator">•</span>
              <span class="blog-card-read-time">{readTime}</span>
            </>
          )}
        </div>
      </header>
      
      <p class="blog-card-excerpt">{excerpt}</p>
      
      {tags.length > 0 && (
        <div class="blog-card-tags">
          {tags.map(tag => (
            <span class="blog-card-tag">#{tag}</span>
          ))}
        </div>
      )}
      
      <div class="blog-card-footer">
        <span class="blog-card-read-more">
          Read More
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7" />
          </svg>
        </span>
      </div>
    </div>
  </a>
</article>

<style>
  .blog-card {
    display: flex;
    background: var(--color-surface);
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border);
    overflow: hidden;
    transition: all var(--transition-base);
    height: 100%;
  }

  .blog-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    border-color: var(--color-primary);
  }

  .blog-card-link {
    display: flex;
    flex-direction: column;
    width: 100%;
    text-decoration: none;
    color: inherit;
  }

  /* Layouts */
  .blog-card-vertical .blog-card-link {
    flex-direction: column;
  }

  .blog-card-horizontal .blog-card-link {
    flex-direction: row;
  }

  .blog-card-horizontal .blog-card-image {
    width: 40%;
    min-height: 250px;
  }

  .blog-card-horizontal .blog-card-content {
    width: 60%;
  }

  .blog-card-compact {
    background: transparent;
    border: none;
    border-radius: 0;
  }

  .blog-card-compact:hover {
    transform: none;
    box-shadow: none;
  }

  /* Image */
  .blog-card-image {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
    background: var(--color-surface);
  }

  .blog-card-vertical .blog-card-image {
    height: 200px;
  }

  .blog-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
  }

  .blog-card:hover .blog-card-image img {
    transform: scale(1.05);
  }

  .blog-card-category {
    position: absolute;
    top: var(--space-md);
    left: var(--space-md);
    padding: var(--space-xs) var(--space-sm);
    background: var(--color-primary);
    color: white;
    font-size: var(--text-xs);
    font-weight: 600;
    border-radius: var(--radius-md);
    text-transform: uppercase;
  }

  .blog-card-featured {
    position: absolute;
    top: var(--space-md);
    right: var(--space-md);
    padding: var(--space-xs) var(--space-sm);
    background: var(--color-accent);
    color: white;
    font-size: var(--text-xs);
    font-weight: 600;
    border-radius: var(--radius-md);
  }

  /* Content */
  .blog-card-content {
    display: flex;
    flex-direction: column;
    flex: 1;
    padding: var(--space-lg);
  }

  .blog-card-compact .blog-card-content {
    padding: var(--space-md) 0;
  }

  .blog-card-header {
    margin-bottom: var(--space-md);
  }

  .blog-card-title {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--space-sm);
    line-height: 1.3;
    transition: color var(--transition-base);
  }

  .blog-card:hover .blog-card-title {
    color: var(--color-primary);
  }

  .blog-card-meta {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .blog-card-avatar {
    width: 24px;
    height: 24px;
    border-radius: var(--radius-full);
    object-fit: cover;
  }

  .blog-card-author {
    font-weight: 500;
    color: var(--color-text);
  }

  .blog-card-separator {
    opacity: 0.5;
  }

  .blog-card-excerpt {
    flex: 1;
    font-size: var(--text-base);
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: var(--space-md);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Tags */
  .blog-card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-bottom: var(--space-md);
  }

  .blog-card-tag {
    padding: var(--space-xs) var(--space-sm);
    background: var(--color-background);
    color: var(--color-text-muted);
    font-size: var(--text-xs);
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
  }

  .blog-card:hover .blog-card-tag {
    background: var(--color-primary);
    color: white;
  }

  /* Footer */
  .blog-card-footer {
    margin-top: auto;
  }

  .blog-card-read-more {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-primary);
    font-weight: 500;
    font-size: var(--text-sm);
    transition: gap var(--transition-base);
  }

  .blog-card:hover .blog-card-read-more {
    gap: var(--space-sm);
  }

  /* Featured */
  .blog-card.featured {
    border-color: var(--color-primary);
    background: linear-gradient(135deg, var(--color-surface), var(--color-background));
  }

  .blog-card.featured .blog-card-title {
    font-size: var(--text-2xl);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-card-horizontal .blog-card-link {
      flex-direction: column;
    }

    .blog-card-horizontal .blog-card-image {
      width: 100%;
      height: 200px;
    }

    .blog-card-horizontal .blog-card-content {
      width: 100%;
    }
  }
</style>