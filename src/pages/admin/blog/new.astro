<script>
  // WYSIWYG Editor functionality
  const editor = document.getElementById('editor');
  const contentInput = document.getElementById('content');
  const titleInput = document.getElementById('title');
  const slugPreview = document.getElementById('slug-preview');
  
  // Generate slug from title
  titleInput?.addEventListener('input', (e) => {
    const slug = e.target.value
      .toLowerCase()
      .replace(/[^\w\s-]/g, '')
      .replace(/\s+/g, '-')
      .replace(/-+/g, '-')
      .trim();
    slugPreview.textContent = slug || 'post-slug';
  });

  // Set current editor for cleanup tools and text layouts
  if (window.setCurrentEditor) {
    window.setCurrentEditor(editor);
  }
  window.currentEditor = editor;
  
  // Toolbar commands
  document.querySelectorAll('.toolbar-btn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.preventDefault();
      const command = btn.dataset.command;
      const value = btn.dataset.value || null;
      
      // Skip special buttons
      if (btn.id === 'link-button' || btn.id === 'cleanup-tools' || btn.id === 'insert-image' || btn.id === 'insert-layout') {
        return;
      }
      
      if (command) {
        document.execCommand(command, false, value);
      }
      
      editor.focus();
    });
  });
  
  // Font family selector
  document.getElementById('font-family')?.addEventListener('change', (e) => {
    const fontFamily = e.target.value;
    if (fontFamily) {
      document.execCommand('fontName', false, fontFamily);
      editor.focus();
    }
  });

  // Font size selector
  document.getElementById('font-size')?.addEventListener('change', (e) => {
    const fontSize = e.target.value;
    if (fontSize) {
      const selection = window.getSelection();
      if (selection.rangeCount > 0) {
        const range = selection.getRangeAt(0);
        const span = document.createElement('span');
        span.style.fontSize = fontSize;
        
        try {
          range.surroundContents(span);
        } catch (e) {
          // If surroundContents fails, use insertHTML
          const selectedText = range.toString();
          document.execCommand('insertHTML', false, `<span style="font-size: ${fontSize}">${selectedText}</span>`);
        }
      }
      editor.focus();
    }
  });

  // Text color picker
  document.getElementById('text-color')?.addEventListener('change', (e) => {
    document.execCommand('foreColor', false, e.target.value);
    editor.focus();
  });

  // Background color picker
  document.getElementById('bg-color')?.addEventListener('change', (e) => {
    document.execCommand('hiliteColor', false, e.target.value);
    editor.focus();
  });

  // Link button handler
  document.getElementById('link-button')?.addEventListener('click', (e) => {
    e.preventDefault();
    if (window.openLinkModal) {
      window.openLinkModal();
    }
  });
  
  // Cleanup tools button
  document.getElementById('cleanup-tools')?.addEventListener('click', (e) => {
    e.preventDefault();
    if (window.showCleanupPanel) {
      window.showCleanupPanel();
    }
  });

  // Sync editor content to hidden textarea
  editor?.addEventListener('input', () => {
    contentInput.value = editor.innerHTML;
  });

  // Image upload modal
  const imageModal = document.getElementById('image-modal');
  const selectImageBtn = document.getElementById('select-image');
  const insertImageBtn = document.getElementById('insert-image');
  const modalClose = document.querySelector('.modal-close');
  
  selectImageBtn?.addEventListener('click', () => {
    imageModal.classList.add('active');
  });
  
  insertImageBtn?.addEventListener('click', () => {
    imageModal.classList.add('active');
  });
  
  modalClose?.addEventListener('click', () => {
    imageModal.classList.remove('active');
  });

  // Tag management
  const tagInput = document.getElementById('tag-input');
  const selectedTags = document.getElementById('selected-tags');
  const selectedTagIds = new Set();
  
  document.querySelectorAll('.tag-suggestion').forEach(btn => {
    btn.addEventListener('click', () => {
      const tagId = btn.dataset.id;
      const tagName = btn.dataset.name;
      
      if (!selectedTagIds.has(tagId)) {
        selectedTagIds.add(tagId);
        
        const tagEl = document.createElement('div');
        tagEl.className = 'selected-tag';
        tagEl.innerHTML = `
          ${tagName}
          <button type="button" onclick="removeTag('${tagId}', this)">×</button>
          <input type="hidden" name="tags[]" value="${tagId}" />
        `;
        selectedTags.appendChild(tagEl);
        
        btn.style.display = 'none';
      }
    });
  });

  window.removeTag = (tagId, btn) => {
    selectedTagIds.delete(tagId);
    btn.parentElement.remove();
    document.querySelector(`.tag-suggestion[data-id="${tagId}"]`).style.display = '';
  };

  // Character counts
  const metaTitleInput = document.getElementById('meta_title');
  const metaDescInput = document.getElementById('meta_description');
  const metaTitleCount = document.getElementById('meta-title-count');
  const metaDescCount = document.getElementById('meta-desc-count');
  
  metaTitleInput?.addEventListener('input', (e) => {
    metaTitleCount.textContent = e.target.value.length;
  });
  
  metaDescInput?.addEventListener('input', (e) => {
    metaDescCount.textContent = e.target.value.length;
  });

  // Date picker functionality
  const publishDateInput = document.getElementById('published_at');
  const setNowBtn = document.getElementById('set-now');
  
  // Set current date/time as default
  if (publishDateInput) {
    const now = new Date();
    // Format: YYYY-MM-DDTHH:mm
    const formatted = now.getFullYear() + '-' + 
      String(now.getMonth() + 1).padStart(2, '0') + '-' +
      String(now.getDate()).padStart(2, '0') + 'T' +
      String(now.getHours()).padStart(2, '0') + ':' +
      String(now.getMinutes()).padStart(2, '0');
    publishDateInput.value = formatted;
    publishDateInput.min = formatted; // Can't publish in the past
  }
  
  setNowBtn?.addEventListener('click', () => {
    const now = new Date();
    const formatted = now.getFullYear() + '-' + 
      String(now.getMonth() + 1).padStart(2, '0') + '-' +
      String(now.getDate()).padStart(2, '0') + 'T' +
      String(now.getHours()).padStart(2, '0') + ':' +
      String(now.getMinutes()).padStart(2, '0');
    publishDateInput.value = formatted;
  });

  // Form submission
  const form = document.getElementById('blog-form');
  const saveDraftBtn = document.getElementById('save-draft');
  
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    await submitForm('published');
  });
  
  saveDraftBtn?.addEventListener('click', async () => {
    await submitForm('draft');
  });
  
  async function submitForm(status) {
    const formData = new FormData(form);
    formData.append('status', status);
    formData.append('content', editor.innerHTML);
    
    // Add the slug based on the title
    const titleValue = titleInput.value;
    const slugValue = slugPreview.textContent;
    formData.append('slug', slugValue !== 'post-slug' ? slugValue : '');
    
    // Log for debugging
    console.log('Submitting form with:', {
      title: formData.get('title'),
      slug: formData.get('slug'),
      status: formData.get('status'),
      content: formData.get('content')?.toString().substring(0, 100)
    });
    
    try {
      const response = await fetch('/admin/api/blog/create.json', {
        method: 'POST',
        body: formData
      });
      
      if (response.ok) {
        const data = await response.json();
        // For now, redirect to the blog list page since edit page doesn't exist yet
        window.location.href = `/admin/blog?saved=true`;
      } else {
        const errorData = await response.json().catch(() => ({ error: 'Unknown error' }));
        console.error('Save error:', errorData);
        alert(`Failed to save post: ${errorData.error || 'Unknown error'}`);
      }
    } catch (error) {
      console.error('Error saving post:', error);
      alert(`Error saving post: ${error.message}`);
    }
  }

  // Tab functionality
  document.querySelectorAll('.tab-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      // Remove active class from all tabs and content
      document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
      document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
      
      // Add active class to clicked tab and corresponding content
      btn.classList.add('active');
      const tabName = btn.dataset.tab;
      document.getElementById(`${tabName}-tab`).classList.add('active');
      
      // Load media library when tab is opened
      if (tabName === 'library') {
        loadMediaLibrary();
      }
    });
  });

  // Enhanced image upload with progress
  const imageUpload = document.getElementById('image-upload');
  const uploadProgress = document.getElementById('upload-progress');
  
  imageUpload?.addEventListener('change', async (e) => {
    const files = Array.from(e.target.files);
    if (!files.length) return;
    
    uploadProgress.innerHTML = '';
    
    for (const file of files) {
      await uploadSingleFile(file);
    }
    
    // Clear the input
    imageUpload.value = '';
  });
  
  async function uploadSingleFile(file) {
    const progressItem = document.createElement('div');
    progressItem.className = 'progress-item';
    progressItem.innerHTML = `
      <span>${file.name}</span>
      <div class="progress-bar">
        <div class="progress-fill" style="width: 0%"></div>
      </div>
      <span class="progress-status">Uploading...</span>
    `;
    uploadProgress.appendChild(progressItem);
    
    const progressFill = progressItem.querySelector('.progress-fill');
    const progressStatus = progressItem.querySelector('.progress-status');
    
    const formData = new FormData();
    formData.append('image', file);
    
    try {
      // Simulate progress for better UX
      progressFill.style.width = '30%';
      
      const response = await fetch('/admin/api/upload-image.json', {
        method: 'POST',
        body: formData
      });
      
      progressFill.style.width = '90%';
      
      if (response.ok) {
        const data = await response.json();
        progressFill.style.width = '100%';
        progressStatus.textContent = 'Complete';
        progressStatus.style.color = 'var(--color-success)';
        
        // Add to the current editor context
        currentUploadContext = data;
        
        // If this is for the featured image
        if (currentImageTarget === 'featured') {
          document.getElementById('cover_image').value = data.url;
          document.getElementById('image-preview').innerHTML = `<img src="${data.url}" alt="" />`;
        }
        
        setTimeout(() => {
          progressItem.remove();
        }, 2000);
      } else {
        const errorData = await response.json();
        progressStatus.textContent = `Error: ${errorData.error}`;
        progressStatus.style.color = 'var(--color-error)';
      }
    } catch (error) {
      progressStatus.textContent = `Error: ${error.message}`;
      progressStatus.style.color = 'var(--color-error)';
    }
  }
  
  // Make loadMediaLibrary globally accessible
  window.loadMediaLibrary = loadMediaLibrary;
  
  // Track upload context
  let currentUploadContext = null;
  let currentImageTarget = 'editor'; // 'editor' or 'featured'
  
  // Load media library
  async function loadMediaLibrary() {
    const gallery = document.getElementById('image-gallery');
    gallery.innerHTML = '<div class="loading-spinner">Loading images...</div>';
    
    try {
      const response = await fetch('/admin/api/list-images.json', {
        credentials: 'same-origin'
      });
      if (response.ok) {
        const data = await response.json();
        if (data.success && data.images.length > 0) {
          gallery.innerHTML = data.images.map(image => `
            <div class="image-item" onclick="selectImageFromLibrary('${image.url}', '${image.name}')">
              <img src="${image.url}" alt="${image.name}" />
              <div class="image-overlay">
                <div class="image-actions">
                  <button class="image-action-btn" onclick="event.stopPropagation(); selectImageFromLibrary('${image.url}', '${image.name}')" title="Select">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="9 11 12 14 22 4"></polyline>
                      <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          `).join('');
        } else {
          gallery.innerHTML = '<div class="loading-spinner">No images found. Upload some images first.</div>';
        }
      } else {
        gallery.innerHTML = '<div class="loading-spinner">Error loading images</div>';
      }
    } catch (error) {
      console.error('Error loading media library:', error);
      gallery.innerHTML = '<div class="loading-spinner">Error loading images</div>';
    }
  }
  
  // Select image from library
  function selectImageFromLibrary(url, name) {
    insertImageIntoEditor(url, name);
    imageModal.classList.remove('active');
  }
  
  // Make function globally accessible
  window.selectImageFromLibrary = selectImageFromLibrary;
  
  // Insert image from URL
  document.getElementById('insert-url-image')?.addEventListener('click', () => {
    const url = document.getElementById('image-url').value;
    const alt = document.getElementById('image-alt').value;
    
    if (!url) {
      alert('Please enter an image URL');
      return;
    }
    
    insertImageIntoEditor(url, alt);
    imageModal.classList.remove('active');
    
    // Clear inputs
    document.getElementById('image-url').value = '';
    document.getElementById('image-alt').value = '';
  });
  
  // Insert image into editor
  function insertImageIntoEditor(url, alt = '') {
    if (currentImageTarget === 'featured') {
      document.getElementById('cover_image').value = url;
      document.getElementById('image-preview').innerHTML = `<img src="${url}" alt="${alt}" />`;
    } else {
      // Insert into WYSIWYG editor with enhanced styling
      editor.focus();
      
      // Create a wrapper div for the image with a paragraph after it
      const imgHtml = `<div class="blog-image-wrapper" style="margin: 1rem 0;"><img src="${url}" alt="${alt || ''}" class="blog-image editable" style="max-width: 100%; height: auto; cursor: pointer; display: block;" /></div><p><br></p>`;
      
      // Use execCommand for better compatibility
      document.execCommand('insertHTML', false, imgHtml);
      
      // Move cursor to the new paragraph
      setTimeout(() => {
        const selection = window.getSelection();
        const paragraphs = editor.querySelectorAll('p');
        if (paragraphs.length > 0) {
          const lastP = paragraphs[paragraphs.length - 1];
          const range = document.createRange();
          range.selectNodeContents(lastP);
          range.collapse(false);
          selection.removeAllRanges();
          selection.addRange(range);
        }
      }, 10);
      
      // Update content textarea
      contentInput.value = editor.innerHTML;
    }
  }
  
  // Track selected image
  let selectedImage = null;
  
  // Handle clicks on images in the editor
  editor.addEventListener('click', (e) => {
    if (e.target.tagName === 'IMG') {
      // Select the image
      selectedImage = e.target;
      
      // Add selection styling
      document.querySelectorAll('.selected-image').forEach(img => 
        img.classList.remove('selected-image')
      );
      e.target.classList.add('selected-image');
      
      // Show image toolbar for editable images
      if (e.target.classList.contains('editable') && window.showImageToolbar) {
        window.showImageToolbar(e.target);
      }
    } else {
      // Deselect image when clicking elsewhere
      selectedImage = null;
      document.querySelectorAll('.selected-image').forEach(img => 
        img.classList.remove('selected-image')
      );
    }
  });
  
  // Handle keyboard shortcuts for image deletion
  editor.addEventListener('keydown', (e) => {
    if ((e.key === 'Delete' || e.key === 'Backspace') && selectedImage) {
      e.preventDefault();
      
      // Find parent container if exists
      const parent = selectedImage.closest('.blog-layout, .blog-gallery, .blog-image-wrapper, figure, .image-with-overlay');
      
      if (parent) {
        // Check if parent has other content
        const hasOtherContent = Array.from(parent.children).some(child => 
          child !== selectedImage && child.textContent.trim() !== ''
        );
        
        if (!hasOtherContent) {
          parent.remove();
        } else {
          selectedImage.remove();
        }
      } else {
        selectedImage.remove();
      }
      
      selectedImage = null;
      contentInput.value = editor.innerHTML;
    }
  });
  
  // Handle right-click on images for overlay options
  editor.addEventListener('contextmenu', (e) => {
    if (e.target.tagName === 'IMG') {
      e.preventDefault();
      if (window.openOverlayModal) {
        window.openOverlayModal(e.target);
      }
    }
  });
  
  // Insert layout template button
  document.getElementById('insert-layout')?.addEventListener('click', () => {
    if (window.showLayoutTemplates) {
      window.showLayoutTemplates();
    }
  });
  
  // Text columns button
  document.getElementById('text-columns')?.addEventListener('click', () => {
    if (window.showTextLayouts) {
      window.showTextLayouts();
    }
  });
  
  // Text alignment button
  document.getElementById('text-align')?.addEventListener('click', () => {
    if (window.showAlignmentToolbar) {
      window.showAlignmentToolbar();
    }
  });
  
  // Fix for nested component editing issues
  function fixNestedComponents() {
    // Remove nested contenteditable attributes
    const nestedEditables = editor.querySelectorAll('[contenteditable]');
    nestedEditables.forEach(el => {
      if (el !== editor) {
        el.removeAttribute('contenteditable');
      }
    });

    // Unwrap unnecessary wrapper divs
    const wrappers = editor.querySelectorAll('.blog-layout, .blog-gallery, .image-with-overlay');
    wrappers.forEach(wrapper => {
      // Check if wrapper is truly stuck (not responding to clicks)
      wrapper.style.pointerEvents = 'auto';
      wrapper.style.userSelect = 'auto';
      
      // Add a click handler to make nested components editable
      wrapper.addEventListener('click', function(e) {
        e.stopPropagation();
        // Make the content inside editable
        const editableContent = this.querySelector('p, span, div:not(.blog-layout):not(.blog-gallery)');
        if (editableContent) {
          editableContent.focus();
          // Select the content for easy editing
          const range = document.createRange();
          range.selectNodeContents(editableContent);
          const selection = window.getSelection();
          selection.removeAllRanges();
          selection.addRange(range);
        }
      });
    });

    // Fix stuck text elements
    const textElements = editor.querySelectorAll('p, span, h1, h2, h3, h4, h5, h6');
    textElements.forEach(el => {
      // Ensure text elements are selectable
      el.style.userSelect = 'text';
      el.style.pointerEvents = 'auto';
      
      // Remove any inline contenteditable that might interfere
      if (el.hasAttribute('contenteditable') && el !== editor) {
        el.removeAttribute('contenteditable');
      }
    });
  }

  // Run fix periodically and on content changes
  editor.addEventListener('input', () => {
    setTimeout(fixNestedComponents, 100);
  });

  // Run fix on paste
  editor.addEventListener('paste', () => {
    setTimeout(fixNestedComponents, 100);
  });

  // Initial fix
  setTimeout(fixNestedComponents, 500);

  // Handle clicks on template images
  editor.addEventListener('click', (e) => {
    if (e.target.tagName === 'IMG' && e.target.classList.contains('template-image')) {
      e.preventDefault();
      e.stopPropagation();
      
      // Store reference to the image being replaced
      window.templateImageToReplace = e.target;
      currentImageTarget = 'template';
      
      // Open image modal
      imageModal.classList.add('active');
      
      // Load media library
      if (window.loadMediaLibrary) {
        window.loadMediaLibrary();
      }
    }
  });
  
  // Store original insertImageIntoEditor function
  const originalInsertImage = insertImageIntoEditor;
  
  // Override insertImageIntoEditor to handle template replacement
  window.insertImageIntoEditor = function(url, alt) {
    if (currentImageTarget === 'template' && window.templateImageToReplace) {
      // Replace template image
      window.templateImageToReplace.src = url;
      window.templateImageToReplace.alt = alt || 'Image';
      window.templateImageToReplace.classList.remove('template-image');
      window.templateImageToReplace.classList.add('editable');
      window.templateImageToReplace = null;
      currentImageTarget = 'editor';
      
      // Update content
      contentInput.value = editor.innerHTML;
    } else {
      // Use original function
      originalInsertImage(url, alt);
    }
  };
  
  // Update insertImageIntoEditor reference
  insertImageIntoEditor = window.insertImageIntoEditor;
  
  // Track which image target we're working with
  selectImageBtn?.addEventListener('click', () => {
    currentImageTarget = 'featured';
    imageModal.classList.add('active');
  });
  
  insertImageBtn?.addEventListener('click', () => {
    currentImageTarget = 'editor';
    imageModal.classList.add('active');
  });
  
  // Drag and drop functionality
  const uploadArea = document.getElementById('upload-area');
  
  uploadArea?.addEventListener('dragover', (e) => {
    e.preventDefault();
    uploadArea.classList.add('drag-over');
  });
  
  uploadArea?.addEventListener('dragleave', (e) => {
    e.preventDefault();
    uploadArea.classList.remove('drag-over');
  });
  
  uploadArea?.addEventListener('drop', (e) => {
    e.preventDefault();
    uploadArea.classList.remove('drag-over');
    
    const files = Array.from(e.dataTransfer.files).filter(file => 
      file.type.startsWith('image/')
    );
    
    if (files.length > 0) {
      // Trigger upload for dropped files
      files.forEach(file => uploadSingleFile(file));
    }
  });

  // ============================================
  // JSON-LD Schema Generation
  // ============================================
  
  function calculateReadingTime(content) {
    const text = content.replace(/<[^>]*>/g, '');
    const words = text.trim().split(/\s+/).length;
    return Math.max(1, Math.ceil(words / 200));
  }
  
  editor?.addEventListener('input', () => {
    const readingTimeInput = document.getElementById('reading_time');
    if (readingTimeInput && !readingTimeInput.dataset.userEdited) {
      readingTimeInput.value = calculateReadingTime(editor.innerHTML);
    }
  });
  
  document.getElementById('reading_time')?.addEventListener('input', (e) => {
    e.target.dataset.userEdited = 'true';
  });
  
  function detectFAQContent(content) {
    const doc = new DOMParser().parseFromString(content, 'text/html');
    const faqs = [];
    doc.querySelectorAll('h2, h3, h4').forEach(heading => {
      const text = heading.textContent.trim();
      if (text.includes('?')) {
        const answer = heading.nextElementSibling;
        if (answer && answer.tagName === 'P') {
          faqs.push({ question: text, answer: answer.textContent.trim() });
        }
      }
    });
    return faqs;
  }
  
  function detectHowToContent(content) {
    const doc = new DOMParser().parseFromString(content, 'text/html');
    const steps = [];
    doc.querySelectorAll('ol li').forEach((item, i) => {
      steps.push({ position: i + 1, name: `Step ${i + 1}`, text: item.textContent.trim() });
    });
    return steps;
  }
  
  function generateJSONLD() {
    const schemaType = document.getElementById('schema_type')?.value || 'BlogPosting';
    const title = titleInput?.value || 'Untitled';
    const description = document.getElementById('meta_description')?.value || '';
    const readingTime = document.getElementById('reading_time')?.value || calculateReadingTime(editor?.innerHTML || '');
    const coverImage = document.getElementById('cover_image')?.value || '';
    const includeFAQ = document.getElementById('schema_faq')?.checked;
    const includeHowTo = document.getElementById('schema_howto')?.checked;
    
    const schema = {
      '@context': 'https://schema.org',
      '@type': schemaType,
      headline: title.substring(0, 110),
      description: description,
      image: coverImage || undefined,
      datePublished: new Date().toISOString(),
      wordCount: editor ? editor.textContent.trim().split(/\s+/).length : 0,
      timeRequired: `PT${readingTime}M`
    };
    
    const faqs = includeFAQ ? detectFAQContent(editor?.innerHTML || '') : [];
    const faqSchema = faqs.length > 0 ? {
      '@context': 'https://schema.org',
      '@type': 'FAQPage',
      mainEntity: faqs.map(f => ({
        '@type': 'Question', name: f.question,
        acceptedAnswer: { '@type': 'Answer', text: f.answer }
      }))
    } : null;
    
    const steps = includeHowTo ? detectHowToContent(editor?.innerHTML || '') : [];
    const howToSchema = steps.length > 0 ? {
      '@context': 'https://schema.org',
      '@type': 'HowTo',
      name: title,
      step: steps.map(s => ({ '@type': 'HowToStep', position: s.position, name: s.name, text: s.text }))
    } : null;
    
    return { article: schema, faq: faqSchema, howTo: howToSchema };
  }
  
  document.getElementById('preview-schema')?.addEventListener('click', () => {
    const schemas = generateJSONLD();
    const modal = document.createElement('div');
    modal.className = 'modal active';
    modal.style.zIndex = '2000';
    modal.innerHTML = `
      <div class="modal-content" style="max-width: 700px;">
        <div class="modal-header">
          <h2>JSON-LD Schema Preview</h2>
          <button type="button" class="modal-close" onclick="this.closest('.modal').remove()">×</button>
        </div>
        <div class="modal-body">
          <h4>Article Schema (${schemas.article['@type']})</h4>
          <pre style="background: var(--color-background); padding: 1rem; border-radius: 8px; overflow-x: auto; font-size: 0.75rem; max-height: 250px;"><code>${JSON.stringify(schemas.article, null, 2)}</code></pre>
          ${schemas.faq ? `<h4>FAQ Schema (${schemas.faq.mainEntity.length} questions)</h4><pre style="background: var(--color-background); padding: 1rem; border-radius: 8px; overflow-x: auto; font-size: 0.75rem; max-height: 150px;"><code>${JSON.stringify(schemas.faq, null, 2)}</code></pre>` : '<p style="color: #888; font-size: 0.875rem;">No FAQ content detected.</p>'}
          ${schemas.howTo ? `<h4>HowTo Schema (${schemas.howTo.step.length} steps)</h4><pre style="background: var(--color-background); padding: 1rem; border-radius: 8px; overflow-x: auto; font-size: 0.75rem; max-height: 150px;"><code>${JSON.stringify(schemas.howTo, null, 2)}</code></pre>` : '<p style="color: #888; font-size: 0.875rem;">No HowTo content detected.</p>'}
          <p style="font-size: 0.75rem; color: #888; margin-top: 1rem;">Test at <a href="https://search.google.com/test/rich-results" target="_blank">Google Rich Results Test</a></p>
        </div>
      </div>
    `;
    document.body.appendChild(modal);
    modal.addEventListener('click', (e) => { if (e.target === modal) modal.remove(); });
  });
</script>